{
  "name": "codeinit-ts",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc -p . && npm run copyfiles ",
    "prod": "npm run build && npm run start",
    "dev": "nodemon --config nodemon.json src/server.ts",
    "copyfiles": "copyfiles -u 1 src/**/*.hbs src/**/*.html src/**/*.css src/**/*.js dist",
    "deploy": "npm run deploy:github && npm run deploy:heroku",
    "deploy:github": "git push",
    "deploy:heroku": "git push heroku main"
  },
  "repository": "https://github.com/kenechiaugustine/codeinitTS.git",
  "author": "Kene Arionye <kenechiaugustine@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-handlebars": "^6.0.3",
    "express-rate-limit": "^6.3.0",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.7",
    "mysql": "^2.18.1",
    "validator": "^13.7.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.21",
    "@types/validator": "^13.7.2",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
